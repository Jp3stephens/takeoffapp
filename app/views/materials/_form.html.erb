<%= form_with(model: material) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :unit_size %>
    <%= form.text_field :unit_size, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :unit_price %>
    <%= form.text_field :unit_price, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), materials_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), material_path(@material), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
